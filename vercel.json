{
  "version": 2,
  "buildCommand": null,
  "outputDirectory": ".",
  "framework": null,
  "headers": [
    {
      "source": "/api/articles/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300, stale-while-revalidate=3600" }
      ]
    },
    {
      "source": "/api/sections",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/api/subsections",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/js/article-cache.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/auth/register", "destination": "/api/auth/register" },
    { "source": "/api/auth/login", "destination": "/api/auth/login" },
    { "source": "/api/auth/me", "destination": "/api/auth/me" },
    { "source": "/api/sections", "destination": "/api/sections/index" },
    { "source": "/api/subsections", "destination": "/api/subsections/index" },
    { "source": "/api/articles/:id", "destination": "/api/articles/[id]" },
    { "source": "/api/articles/:id/view", "destination": "/api/articles/[id]" },
    { "source": "/api/articles", "destination": "/api/articles/index" },
    { "source": "/api/users/:id", "destination": "/api/users/[id]" },
    { "source": "/api/users", "destination": "/api/users/index" },
    { "source": "/api/settings", "destination": "/api/settings/index" }
  ]
}
